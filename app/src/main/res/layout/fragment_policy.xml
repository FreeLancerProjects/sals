<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <ImageView
                android:id="@+id/arrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight=".01"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:src="@drawable/ic_left_arrows"
                android:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:gravity="center"
                android:text="@string/policy"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintBottom_toTopOf="@+id/bt_share"
    android:layout_marginBottom="8dp"
    >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     >
     <ImageView
         android:id="@+id/im_logo"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="2dp"
android:layout_gravity="center"

         android:src="@drawable/logo"
         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/the_policy_must_be_printed"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:textColor="@color/colorPrimary"
         android:textSize="16sp"
         android:gravity="center"
         />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/from"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:textColor="@color/colorPrimary"
         android:layout_marginTop="8dp"
         android:textSize="16sp"
         />
     <TextView
         android:id="@+id/tv_name_from"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/name"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         />
     <TextView
         android:id="@+id/tv_phone_from"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/phone"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         android:layout_marginTop="5dp"
         />
     <TextView
         android:id="@+id/tv_addressfrom"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/phone"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         android:layout_marginTop="5dp"
         />
     <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/gray3"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="3dp"
         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/to"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:textColor="@color/colorPrimary"
         android:layout_marginTop="8dp"
         android:textSize="16sp"
         />
     <TextView
         android:id="@+id/tv_name_to"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/name"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         />
     <TextView
         android:id="@+id/tv_phone_to"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/phone"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         android:layout_marginTop="5dp"
         />
     <TextView
         android:id="@+id/tv_addressto"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/phone"
         android:textColor="@color/black"
         android:paddingRight="45dp"
         android:paddingLeft="45dp"
         android:textSize="15sp"
         android:layout_marginTop="5dp"
         />
     <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/gray3"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="3dp"
         />

<TextView
    android:id="@+id/tv_awbbarcode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="AWBBarCode"
    android:textSize="15sp"
    android:textColor="@color/colorPrimary"
    android:gravity="center"
    android:layout_marginTop="8dp"

    />
    <ImageView
        android:id="@+id/im_awbbarcode"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        />
     <TextView
         android:id="@+id/tv_origindestnbarcode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="OriginDestnBarcode"
         android:textSize="15sp"
         android:textColor="@color/colorPrimary"
         android:gravity="center"
         android:layout_marginTop="8dp"

         />

     <ImageView
         android:id="@+id/im_origindestnbarcode"
         android:layout_width="match_parent"
         android:layout_height="133dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="2dp"
         android:layout_marginRight="8dp"
         android:scaleType="fitXY"

         />
     <TextView
         android:id="@+id/tv_clientbarcode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="ClientIDBarCode"
         android:textSize="15sp"
         android:textColor="@color/colorPrimary"
         android:gravity="center"
         android:layout_marginTop="8dp"

         />
     <ImageView
         android:id="@+id/im_clientbarcode"
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="2dp"
         android:scaleType="fitXY"

         />
     <TextView
         android:id="@+id/tv_dhlroutingbarcode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="DHLRoutingBarCode"
         android:textSize="15sp"
         android:textColor="@color/colorPrimary"
         android:gravity="center"
         android:layout_marginTop="8dp"

         />
     <ImageView
         android:id="@+id/im_dhlroutingbarcode"
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="2dp"
         android:scaleType="fitXY"

         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Pieces Bar Code"
         android:textSize="15sp"
         android:textColor="@color/colorPrimary"
         android:gravity="center"
         android:layout_marginTop="8dp"

         />
     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/rec_barcode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


     </androidx.recyclerview.widget.RecyclerView>

 </LinearLayout>

</androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/bt_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/button_shape"
        android:textSize="15sp"
        android:text="@string/share"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>