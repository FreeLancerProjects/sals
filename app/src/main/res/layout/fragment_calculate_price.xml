<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/gray"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">


            <ImageView
                android:id="@+id/arrow"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_weight=".01"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:src="@drawable/ic_left_arrows"
                android:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".99"
                android:gravity="center"
                android:text="@string/account"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true"
    android:background="@color/white"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray4"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/sent_by"
            android:textColor="@color/black"
            android:textSize="15sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/linear_underline_shape"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:layout_gravity="center"
           >

        </Spinner>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linear_underline_shape"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_gravity="center"
                >

            </Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray4"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/sent_to"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linear_underline_shape"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_gravity="center"
                >

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linear_underline_shape"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_gravity="center"
                >

            </Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray4"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/what_you_want_to_ship"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            >
            <FrameLayout
                android:id="@+id/fr_document"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/button_shape2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:id="@+id/im_document"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/document"
                        android:tint="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_document"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/documents"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fr_parcel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
               android:layout_weight=".5"
                android:background="@drawable/linear_shape3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:id="@+id/im_parcel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/shipment"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/tv_parcel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/parcels"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        />
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/number_of_pieces"
                android:gravity="center_vertical"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:weightSum="3"
                >

                <Button
                    android:id="@+id/decrement"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:background="@drawable/linear_shape"
                    />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/increment"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="+"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="@drawable/linear_shape"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="@string/approximate_weight_kg"
        android:gravity="center_vertical"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:theme="@style/AppTheme.LighterEditText"
        android:textColor="@color/black"
        android:hint="@string/size"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColorHint="@color/gray4"
        />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray4"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/when_will_the_shipment_be_ready"
            android:textColor="@color/black"
            android:textSize="15sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
android:paddingRight="5dp"
    android:layout_marginTop="8dp"
    android:weightSum="1"
    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:src="@drawable/timer"
        android:layout_weight=".05"
        android:padding="10dp"

       />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/date"
        android:textColor="@color/black"
        android:layout_weight=".9"
        android:textSize="15sp"
        android:gravity="center_vertical"

        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:src="@drawable/downarrow"
        android:layout_weight=".05"
        android:padding="10dp"
        />
</LinearLayout>
    <Button
        android:id="@+id/bt_claculate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/button_shape"
        android:textSize="15sp"
        android:text="@string/price_calculate"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        />
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>